
<div class="loginPage">

  <div class="loginForm">
    <h2>Login</h2>
    <%= form_tag login_path do %>
      <p>
      <%= email_field_tag :email, type="", :class => "form-control", :placeholder => "Email"%>
      </p>

      <p>
        <%= password_field_tag :password, type="", :class => "form-control", :placeholder => "Password" %>
      </p>

      <%= submit_tag "Login", :class => "btn btn-default" %>
  </div>

  <br>
  <br>

  <div class="facebookSignupForm">
    <%= link_to(image_tag( "facebookSignup.png", :id => "facebookSignupLogo" ), "#" ) %>
  </div>

  <br>
  <br>

  <div class="emailSignupForm">
    <%= link_to(image_tag( "emailSignup.png", :id => "emailSignupLogo" ), new_user_path ) %>
  </div>

</div>

<% end %>
